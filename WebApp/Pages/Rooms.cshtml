@page
@model RoomsModel
@{
    ViewData["Title"] = "Rooms";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to add rooms.</p>

<main class="form-room">
  <form id="form-rooms">
    <img class="mb-4" src="~/assets/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating" id="email-item">
      <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating" id="password-item">
      <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>

    <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    <button onclick="myFunction1(event)" id="btn-hide-1" class="btn btn-primary w-100 py-2 btn-hide-passw">Hide the Password TextBox</button>
    <button onclick="myFunction2(event)" id="btn-hide-2" class="btn btn-primary w-100 py-2 btn-hide-mail">Hide the E-mail TextBox</button>
    <p class="mt-5 mb-3 text-body-secondary">&copy; 2017â€“2024</p>
  </form>
</main>