@page
@using Microsoft.AspNetCore.Http
@model ListReservationsModel
@{
    ViewData["Title"] = "List Reservation";
    var today = DateTime.Today;
    var lastday = today.AddDays(7-(int)today.DayOfWeek);
    var todayString = today.ToString("yyyy-MM-dd");
    var lastdayString = lastday.ToString("yyyy-MM-dd");
}
@section scripts{
   <script>
        $(function () {
            $('button.search').on('click', function () {
                $('#modelEdit2').trigger('focus');
            });
        });
    </script>
   <script>
        $(function () {
            $('button.edit').on('click', function () {
                $('#modelEdit').trigger('focus');
            });
        });
    </script>
}

<h1>@ViewData["Title"]</h1>
<p>Use this page to list Reservation.</p>

<form asp-page="./ListReservations" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Room Name:
            <input type="text" name="searchString1" value="" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./ListReservations">Back to full List</a>
        </p>
    </div>
    <div class="form-actions no-color">
        <p>
            Find by Capacity:  
            <input type="text" name="searchString2" value="" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./ListReservations">Back to full List</a>
        </p>
    </div>
    <div class="form-actions no-color">
        <p>
            Find by Date:
            <input type="date" name="searchString3" value="" min="@todayString" max="@lastdayString"/>
            <input type="submit" value="Search" class="btn btn-primary" /> |
            
            <a asp-page="./ListReservations">Back to full List</a>
        </p>
    </div>
    <div class="form-actions no-color">
        <p>
            Find by Status:  
            <select name="searchString4" id="PizzaSize">
                <option value="">--Select Status</option>
                <option value="True">Confirmed</option>
                <option value="False">Waiting</option>
            </select> 
            <input type="submit" value="Search" class="btn btn-primary" />|
            <a asp-page="./ListReservations">Back to full List</a>
        </p>
    </div>
</form>

<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">
                <a asp-page="./ListReservations" asp-route-sortOrder="@Model.RoomNameSort">
                    @Html.DisplayNameFor(model => model.ReservationList[0].Room.RoomName)
                </a>
            </th>
            <th scope="col">
                <a asp-page="./ListReservations" asp-route-sortOrder="@Model.RoomCapacitySort">
                    @Html.DisplayNameFor(model => model.ReservationList[0].Room.Capacity)
                </a>
            </th>
            <th scope="col">
                <a asp-page="./ListReservations" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.ReservationList[0].Date)
                </a>
            </th>
            <th scope="col">
                <a asp-page="./ListReservations" asp-route-sortOrder="@Model.IsConfirmedSort">
                Status
                </a>
            </th>
            <th scope="col">Delete</th>
            <th scope="col">Edit  <button class="btn btn-danger edit" data-toggle="modal" data-target="#modalEdit"><i class="fa-solid fa-pen-to-square" title="Edit"></i></button></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var Reservation in Model.ReservationList)
    {
        <tr>
            <td>@Reservation.Room.RoomName</td>
            <td>@Reservation.Room.Capacity</td>
            <td>@Reservation.Date.ToShortDateString()</td>
            <td>
                
                @if(Model.UserId == @Reservation.ReserverId && @Reservation.IsConfirmed == false)
                {
                    <form method="post" asp-page-handler="Confirm" asp-route-id="@Reservation.ReservationId">
                    <button class="btn btn-primary"><i class="fa-solid fa-check" title="Confirm"></i></button>
                    </form>
                }
                else
                {
                    <text>Confirmed</text><i class="fa-solid fa-check-double"></i>
                }
            </td>
            <td>
                @if(Model.UserId == @Reservation.ReserverId && @Reservation.IsConfirmed == false)
                {
                    <form method="post" asp-page-handler="Delete" asp-route-id="@Reservation.ReservationId">
                    <button class="btn btn-danger"><i class="fa-solid fa-trash" title="Delete"></i></button>
                    </form>
                }
                else if (Model.UserId == @Reservation.ReserverId)
                {
                    <text>Deletable via Profile</text>
                }
                else
                {
                    <i class="fa-solid fa-ghost"></i>
                }
            </td>
            <td>
                @if(Model.UserId == @Reservation.ReserverId && @Reservation.IsConfirmed == false)
                {
                    
                    <text>Editable</text>
                }
                else
                {
                    <i class="fa-solid fa-ghost"></i>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
    <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Edit Reservation @Model.Id</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <div class="modal-body">
            <label asp-for="@Model.Id" class="control-label" value="Reservation"></label>
            <select asp-for="@Model.Id" id="PizzaSize" aria-placeholder="Select Reservation">
            @foreach (var reservation in Model.ReservationList)
            {
                <option value="@reservation.ReservationId">Room: @reservation.Room.RoomName Date: @reservation.Date</option>
            }
            </select>
            <input type="submit" value="Search" class="btn btn-primary" />
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn btn-danger edit" data-toggle="modal" data-target="#modalEdit2"><i class="fa-solid fa-pen-to-square" title="Edit"></i></button></th>
              </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalEdit2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Edit Reservation @Model.Id</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <div class="modal-body">
                @if(@Model.Id > 0 )
                {
                    <form id="editReservationForm" method="post" asp-area="./ListReservations" asp-page-handler="Edit" asp-route-id="@Model.Id">
                    <div class="form-group">
                        <label asp-for="Input.RoomId" class="col-form-label"></label>
                        <select asp-for="Input.RoomId" class="form-control" id="PizzaSize" aria-placeholder="@Model.ReservationList.First(r=>r.ReservationId==@Model.Id).Room.RoomName" >
                            <option value="">-- Select Room --</option>
                        @foreach (var room in Model.RoomList)
                        {
                            <option value="@room.RoomId">@room.RoomName</option>
                        }
                        </select>
                        <span asp-validation-for="Input.RoomId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                     <label asp-for="Input.Date" class="col-form-label"></label>
                     <input asp-for="Input.Date" class="form-control" placeholder="@todayString" type="date" min="@todayString" max="@lastdayString" aria-placeholder="@Model.ReservationList.First(r=>r.ReservationId==@Model.Id).Date"/>
                   </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                }
                else
                {
                    <br>
                    <text>Pls choose a reservation first!</text>
                }
              <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                @* <button type="submit" class="btn btn-primary form-group" id="editReservationForm">Save changes</button> *@
              </div>
            </div>
        </div>
    </div>

    